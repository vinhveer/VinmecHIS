
@{
    ViewBag.Title = "Index";
}

@model IEnumerable<Receptionist.Models.Data.MEDICALRECORD>

<div class="container py-5">
    <h3>Danh sách hóa đơn</h3>
    <table class="table mt-5">
        <thead>
            <tr>
                <th scope="col">STT</th>
                <th scope="col">Mã số hồ sơ</th>
                <th scope="col">Lễ tân xác nhận</th>
                <th scope="col">Ngày thanh toán</th>
                <th scope="col">Tùy chọn</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                int stt = 1;
                foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@stt</th>
                        <th>@item.MEDICAL_RECORD_ID</th>
                        <th>@item.EMPLOYEE.FIRST_NAME @item.EMPLOYEE.LAST_NAME</th>
                        <td>@item.INVOICE.PAYMENT_DATE.ToString("dd/MM/yyyy")</td>
                        <td>
                            <a href="@Url.Action("Details", "InvoicePatient", new { id = item.MEDICAL_RECORD_ID})" class="">
                                Xem đơn thuốc
                            </a>
                        </td>
                    </tr>
                    stt++;
                }
            }
            else
            {
                <tr>
                    <td colspan="3">Không có dữ liệu</td>
                </tr>
            }
        </tbody>
    </table>
</div>
