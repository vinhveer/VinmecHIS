@{
    ViewBag.Title = "Le tan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Authentication Request</h2>

<div>
    <p><strong>Decrypted EmployeeID:</strong> @ViewBag.EmployeeId</p>
    <p><strong>Token:</strong> @ViewBag.Token</p>
</div>

@if (ViewBag.EmployeeId != null && ViewBag.Token != null)
    ViewBag.Title = "Xử lý đăng nhập";
}
@if (Session["EmployeeId"] != null && ViewBag.Token != null)
{
    <p style="color: green;">Thông tin xác thực đã được xử lý thành công <br /> Đang chuyển hướng ...</p>

    <script>
        // Hàm chuyển hướng
        function chuyenHuong() {
            window.location.href = "https://localhost:44316/Home/Index"; // Thay URL bằng trang bạn muốn chuyển
        }

        // Tự động gọi hàm chuyển hướng sau .5 giây
        setTimeout(chuyenHuong, 500);
    </script>
}
else
{
    <p style="color: red;">Thông tin xác thực không hợp lệ. <a href="https://localhost:44371/">Về trang đăng nhập</a></p>
}