@model IEnumerable<Doctor.Models.Data.AppointmentViewModel>
@{
    ViewBag.Title = "Cuộc hẹn khám";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int idx = ViewBag.STT;
    string gender = "";
}
<div class="container p-3 my-5 bg-light border">
    <h2 class="text-center mb-4">Danh Sách Lịch Khám Của Bác Sĩ</h2>
    <!-- tây bồ -->
    <table id="schedule" class="table table-striped nowrap" style="width:100%">
        <!-- header của bảng -->
        <thead>
            <tr>
                <th>STT</th>
                <th>Bệnh nhân</th>
                <th>Giới tính</th>
                <th>Ngày Giờ</th>
                <th>Phòng Khám</th>
               
            </tr>
        </thead>

        <!-- body của bảng -->
        <tbody>
            @foreach (var appointment in Model)
            {
                <tr>
                    <td>
                        @idx
                        @{
                            idx++;
                        }

                    </td>
                    <td>@appointment.PatientName</td>
                    <td>
                        @(
                            appointment.PatientGender == "M" ? "Nam" : "Nữ"
                        )
                    </td>
                    <td>@appointment.AppointmentDate.ToString("dd-MM-yyyy HH:mm")</td>
                    <td>@appointment.Room</td>
                </tr>
            }
        </tbody>
    </table>
    <div class="d-flex align-items-center justify-content-center  mb-3">
        <nav aria-label="Page navigation">
            <ul class="pagination mb-0">
                <li class="page-item @(ViewBag.CurrentPage == 1 ? "d-none" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = ViewBag.CurrentPage - 1 })"><</a>
                </li>
                @for (int j = 1; j <= ViewBag.TotalPages; j++)
                {
                    <li class="page-item @(j == ViewBag.CurrentPage ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { page = j })">@j</a>
                    </li>
                }
                <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "d-none" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = ViewBag.CurrentPage + 1 })">></a>
                </li>
            </ul>
        </nav>
    </div>

</div>


