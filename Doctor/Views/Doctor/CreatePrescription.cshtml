@model Doctor.Models.Data.PRESCRIPTIONDETAIL

@{
    ViewBag.Title = "Tạo Đơn Thuốc";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-primary">@ViewBag.Title</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        <strong>Lỗi!</strong> @TempData["ErrorMessage"]
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        <strong>Thành công!</strong> @TempData["SuccessMessage"]
    </div>
}

<div class="well">
    <h4>Thông Tin Hồ Sơ Bệnh Án</h4>
    <p><b>Bệnh Nhân:</b> @ViewBag.MedicalRecord.PATIENT?.NAME</p>
    <p><b>Chẩn Đoán:</b> @ViewBag.MedicalRecord.DIAGNOSIS</p>
    <p><b>Ngày Khám:</b> @ViewBag.MedicalRecord.EXAMINATION_DATE.ToString("dd/MM/yyyy")</p>
</div>

@using (Html.BeginForm("CreatePrescription", "Doctor", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.MEDICAL_RECORD_ID)

    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.MEDICINE_ID, "Thuốc:", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.MEDICINE_ID, (SelectList)ViewBag.Medicines, "Chọn thuốc", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MEDICINE_ID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PRESCRIBED_QUANTITY, "Số Lượng:", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.PRESCRIBED_QUANTITY, new { @class = "form-control", type = "number", min = 1, placeholder = "Nhập số lượng thuốc" })
                @Html.ValidationMessageFor(model => model.PRESCRIBED_QUANTITY, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DOSAGE, "Liều Lượng:", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.DOSAGE, new { @class = "form-control", rows = 3, placeholder = "Nhập liều lượng và hướng dẫn" })
                @Html.ValidationMessageFor(model => model.DOSAGE, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary">
                    <i class="glyphicon glyphicon-save"></i> Lưu Đơn Thuốc
                </button>
                <a href="@Url.Action("MedicalRecordDetails", "Doctor", new { id = ViewBag.MedicalRecord.MEDICAL_RECORD_ID })" class="btn btn-default">
                    <i class="glyphicon glyphicon-arrow-left"></i> Quay lại
                </a>
            </div>
        </div>
    </div>
}
