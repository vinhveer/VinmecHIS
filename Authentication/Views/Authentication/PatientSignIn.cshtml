@{
    ViewBag.Title = "Đăng ký bệnh nhân";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <a class="navbar-brand" href="#">
                <img src="../../Items/logo.svg" alt="">
            </a>
        </div>

        <!-- Form đăng nhập bên phải -->
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h4 class="mb-3">Đăng nhập</h4>
                    @if (!string.IsNullOrEmpty(ViewBag.Error))
                    {
                        <div class="alert alert-danger alert-dismissible fade show">
                            @ViewBag.Error
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @using (Html.BeginForm("PatientSignIn", "Authentication", FormMethod.Post))
                    {
                        <div class="mb-3">
                            <label class="form-label">Tên đăng nhập</label>
                            <input type="text" name="username" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Mật khẩu</label>
                            <input type="password" name="password" class="form-control" required />
                        </div>
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="rememberMe" name="rememberMe">
                            <label class="form-check-label" for="rememberMe">
                                Ghi nhớ đăng nhập
                            </label>
                        </div>
                        <button type="submit" class="btn btn-primary w-100 mb-3">Đăng nhập</button>
                        <div class="text-center">
                            <p class="mb-2">
                                Bạn chưa có tài khoản?
                                <a href="@Url.Action("PatientSignUp", "Authentication")">Tạo tài khoản ngay</a>
                            </p>
                            <a href="@Url.Action("ForgotPassword", "Authentication")">Quên mật khẩu?</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>