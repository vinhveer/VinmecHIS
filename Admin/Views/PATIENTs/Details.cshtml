@model Admin.Models.Data.PATIENT

@{
    ViewBag.Title = $"{Model.FIRST_NAME} {Model.LAST_NAME} - Chi Tiết Bệnh Nhân";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a href="javascript:history.back()" class="btn btn-outline-secondary"> <i class="bi bi-arrow-left"></i> Quay lại</a>
@Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.PATIENT_ID }, new { @class = "btn btn-warning" })
@Html.ActionLink("Xóa", "Delete", new { id = Model.PATIENT_ID }, new { @class = "btn btn-danger" })
<div class="container mt-5 card card-body shadow-sm border-0">
    <h3 class="text-primary mb-3">@Model.FIRST_NAME @Model.LAST_NAME</h3>
    <div class="row">
        <!-- Cột trái -->
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-5">Tên đăng nhập:</dt>
                <dd class="col-sm-7">@Model.PATIENTACCOUNT.PATIENT_USERNAME</dd>

                <dt class="col-sm-5">Ngày sinh:</dt>
                <dd class="col-sm-7">@Model.DATE_OF_BIRTH.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-5">Giới tính:</dt>
                <dd class="col-sm-7">
                    @if (Model.GENDER == "M")
                    {
                        @:Nam
                    }
                    else if (Model.GENDER == "F")
                    {
                        @:Nữ
                    }
                    else
                    {
                        @:Khác
                    }
                </dd>

                <dt class="col-sm-5">Email:</dt>
                <dd class="col-sm-7">@Model.PATIENT_EMAIL</dd>
            </dl>
        </div>

        <!-- Cột phải -->
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-5">Số điện thoại:</dt>
                <dd class="col-sm-7">@Model.PATIENT_PHONE</dd>

                <dt class="col-sm-5">Địa chỉ:</dt>
                <dd class="col-sm-7">@Model.PATIENT_ADDRESS</dd>

                <dt class="col-sm-5">Liên hệ khẩn cấp:</dt>
                <dd class="col-sm-7">@Model.EMERGENCY_CONTACT</dd>

                <dt class="col-sm-5">Ngày đăng ký:</dt>
                <dd class="col-sm-7">@Model.REGISTRATION_DATE.ToString("dd/MM/yyyy")</dd>
            </dl>
        </div>
    </div>
</div>
