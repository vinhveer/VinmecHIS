@model Admin.Models.Data.PATIENT

@{
    ViewBag.Title = "Delete Patient";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-3">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <h2 class="text-center text-danger mb-3">XÁC NHẬN XÓA BỆNH NHÂN</h2>

            @using (Html.BeginForm("Delete", "Patients", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal p-4 border rounded bg-light">
                    <div class="row mb-3">
                        <div class="col-md-4"></div>
                        <div class="col-md-8">
                            <p><strong>Tên đăng nhập:</strong> @Model.PATIENTACCOUNT.PATIENT_USERNAME</p>
                            <p><strong>Họ:</strong> @Model.FIRST_NAME</p>
                            <p><strong>Tên:</strong> @Model.LAST_NAME</p>
                            <p><strong>Ngày sinh:</strong> @Model.DATE_OF_BIRTH.ToString("dd/MM/yyyy")</p>
                            <p>
                                <strong>Giới tính:</strong>
                                @if (Model.GENDER == "M")
                                {
                                    @:Nam
                                }
                                else if (Model.GENDER == "F")
                                {
                                    @:Nữ
                                }
                                else
                                {
                                    @:Khác
                                }
                            </p>
                            <p><strong>Email:</strong> @Model.PATIENT_EMAIL</p>
                            <p><strong>Số điện thoại:</strong> @Model.PATIENT_PHONE</p>
                            <p><strong>Địa chỉ:</strong> @Model.PATIENT_ADDRESS</p>
                            <p><strong>Liên hệ khẩn cấp:</strong> @Model.EMERGENCY_CONTACT</p>
                            <p><strong>Ngày đăng ký:</strong> @Model.REGISTRATION_DATE.ToString("dd/MM/yyyy")</p>
                        </div>
                    </div>

                    <div class="form-group text-center">
                        <input type="submit" value="Xác nhận xóa" class="btn btn-danger me-2" />
                        <a href="javascript:history.back()" class="btn btn-primary">Quay lại</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
