@model Pharmacy.Models.Data.MEDICINE

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

        <h3 class="mb-4">Chỉnh sửa thông tin Thuốc</h3>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MEDICINE_ID)

<div class="mb-4">
    <button type="submit" class="btn btn-primary">Lưu</button>
    @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary" })
</div>

        <div class="mb-3">
            @Html.LabelFor(model => model.SUPPLIER_ID, "Nhà cung cấp", new { @class = "form-label" })
            @Html.DropDownList("SUPPLIER_ID", null, new { @class = "form-select" })
            @Html.ValidationMessageFor(model => model.SUPPLIER_ID, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.MEDICINE_NAME, "Tên thuốc", new { @class = "form-label" })
            @Html.EditorFor(model => model.MEDICINE_NAME, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MEDICINE_NAME, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.UNIT, "Đơn vị", new { @class = "form-label" })
            @Html.EditorFor(model => model.UNIT, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.UNIT, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.STOCK_QUANTITY, "Số lượng", new { @class = "form-label" })
            @Html.EditorFor(model => model.STOCK_QUANTITY, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.STOCK_QUANTITY, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.EXPIRATION_DATE, "Ngày hết hạn", new { @class = "form-label" })
            @Html.TextBoxFor(model => model.EXPIRATION_DATE, new { @class = "form-control", @Value = Model.EXPIRATION_DATE.ToString("dd/MM/yyyy") })
            @Html.ValidationMessageFor(model => model.EXPIRATION_DATE, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.PRICE, "Giá", new { @class = "form-label" })
            @Html.EditorFor(model => model.PRICE, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.PRICE, "", new { @class = "text-danger" })
        </div>
}
